<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th colspan="3">Hack</th>
      <th colspan="3">Project Name</th>
      <th colspan="3">Web URL</th>
      <th colspan="3">Readme URL</th>
      <th colspan="3">Student</th>
      <th colspan="3">Project URL</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td colspan="3" style ="word-break:break-all;"><%= project.try(:hack).try(:name) %></td>
        <td colspan="3" style ="word-break:break-all;"><%= project.try(:name) %></td>
        <td colspan="3" style ="word-break:break-all;"><%= link_to "#{project.web_url}", "#{project.web_url}", target: '_blank', style: "color:#ff0000;text-decoration: underline;" %></td>
        <td colspan="3" style ="word-break:break-all;"><%= link_to "#{project.read_me_url}", "#{project.read_me_url}", target: '_blank', style: "color:#ff0000;text-decoration: underline;" %></td>
        <td colspan="3" style ="word-break:break-all;"><%= project.try(:student).try(:name) %></td>
        <td colspan="3" style ="word-break:break-all;"><%= link_to 'Show Project', project, class: 'btn btn-small btn-warning' %></td>
        <td colspan="3" style ="word-break:break-all;"><%= link_to 'Start Grading', project_grades_path(project), class: 'btn btn-small btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Hackers', students_path, class: 'btn btn-warning' %>
<%= link_to 'Judges', graders_path, class: 'btn btn-warning' %>
<%= link_to 'View All Scores', scores_path, class: 'btn btn-warning' %>
<%= link_to 'View Total Scores', total_scores_path, class: 'btn btn-warning' %>
<%= link_to 'Download All Projects Data', download_projects_path, class: 'btn btn-warning' %>
