<h2>Register</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :name %><br/>
      <%= f.text_field :name, autofocus: true, style: "height:30px; width:600px;", class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :grader_type %><br>
      <%= f.select :grader_type, ["Technical Expert", "User Interface Expert"] %>
    </div>

    <div class="form-group">
      <%= f.label :hack_name %><br>
      <%= f.select :hack_name, Hack.pluck(:name) %>
    </div>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, style: "height:30px; width:600px;", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, style: "height:30px; width:600px;", autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, style: "height:30px; width:600px;", autocomplete: "off", class: 'form-control' %>
  </div>

  <div class="actions">
    <button type="submit" class="btn btn-primary">
      Sign Up
    </button>
  </div>
<% end %>
