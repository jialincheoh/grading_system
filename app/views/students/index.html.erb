<p id="notice"><%= notice %></p>

<h2>Listing Students</h2>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th colspan="3"> Name</th>
      <th colspan="3">Email</th>
      <th colspan="3">Github</th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td colspan="3"><%= link_to student.name, student %></td>
        <td colspan="3"><%= student.email %></td>
        <td colspan="3"><%= student.github %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Projects', projects_path, class: 'btn btn-small btn-warning' %>
<%= link_to 'Back', root_path, class: 'btn btn-small btn-warning' %>
